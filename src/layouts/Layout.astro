---
import '../styles/global.css'; // <--- ADD THIS LINE

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="DevOps & Cloud Engineer Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-slate-950 text-slate-200 font-sans antialiased selection:bg-cyan-500 selection:text-white">
        <div class="fixed top-0 z-[-1] h-full w-full bg-slate-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(6,182,212,0.15),rgba(255,255,255,0))]"></div>
    <nav class="sticky top-0 z-50 w-full border-b border-slate-800 bg-slate-950/80 backdrop-blur-md">
    <div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
        <a href="/" class="text-white font-bold tracking-tighter text-xl">
        SS<span class="text-cyan-500">.</span>
        </a>
        <div class="flex gap-8">
        <a href="/" class="text-sm text-slate-400 hover:text-white transition-colors">Home</a>
        <a href="/#projects" class="text-sm text-slate-400 hover:text-white transition-colors">Projects</a>
        <a href="/tutorials" class="text-sm text-slate-400 hover:text-white transition-colors">Tutorials</a>
        </div>
    </div>
    </nav>
        <main class="max-w-6xl mx-auto px-6 py-12 md:py-20">
			<slot />
		</main>
	</body>
</html>

<style is:global>
    /* Set the font family */
    :root { font-family: 'Inter', sans-serif; }
</style>