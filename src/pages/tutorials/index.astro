---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Fetch all entries from the 'tutorials' collection
const allTutorials = await getCollection('tutorials');

// Sort them by date (newest first)
const sortedTutorials = allTutorials.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Tutorials | Sandeep Siyadri">
  <section class="py-12">
    <div class="mb-12">
      <a href="/" class="text-cyan-400 hover:text-cyan-300 text-sm font-medium mb-4 block">‚Üê Back to Home</a>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Technical Tutorials</h1>
      <p class="text-slate-400 text-lg max-w-2xl">
        Deep dives into DevOps automation, SRE best practices, and cloud architecture patterns.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-6">
      {sortedTutorials.map((post) => (
        <a 
          href={`/tutorials/${post.slug}`} 
          class="group p-8 bg-slate-900/50 border border-slate-800 rounded-2xl hover:border-cyan-500/30 hover:bg-slate-900 transition-all"
        >
          <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4">
            <div>
              <div class="flex gap-2 mb-3">
                {post.data.tags.map(tag => (
                  <span class="text-[10px] uppercase tracking-widest font-bold px-2 py-0.5 bg-cyan-950 text-cyan-400 rounded-full border border-cyan-900">
                    {tag}
                  </span>
                ))}
              </div>
              <h2 class="text-2xl font-bold text-white group-hover:text-cyan-400 transition-colors">
                {post.data.title}
              </h2>
              <p class="text-slate-400 mt-2 line-clamp-2">
                {post.data.description}
              </p>
            </div>
            <div class="text-sm font-mono text-slate-500 whitespace-nowrap">
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
              })}
            </div>
          </div>
        </a>
      ))}
    </div>

    {allTutorials.length === 0 && (
      <div class="text-center py-20 bg-slate-900/20 border border-dashed border-slate-800 rounded-2xl">
        <p class="text-slate-500">No tutorials published yet. Check back soon!</p>
      </div>
    )}
  </section>
</Layout>